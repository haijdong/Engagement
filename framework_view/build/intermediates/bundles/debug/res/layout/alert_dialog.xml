<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/dialog_bg"
    android:id="@+id/alert_layout"
    >
    
	<TextView 
	    android:id="@+id/alert_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:textColor="#333333"
	    android:minHeight="@dimen/x88"
	    android:textSize="@dimen/x32"
	    />
	
	<TextView 
	    android:id="@+id/alert_content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:minHeight="@dimen/x140"
	    android:textColor="#333333"
	    android:textSize="@dimen/x32"
	    android:maxLines="10"
		android:scrollbars="vertical"
		android:paddingTop="@dimen/x60"
		android:paddingBottom="@dimen/x60"
		android:paddingLeft="@dimen/x30"
		android:paddingRight="@dimen/x30"
	    />
	
	<View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/common_line"
        />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/x88"
	    android:orientation="horizontal"
	    >
	    <TextView 
	        android:id="@+id/alert_lbtn"
	        android:layout_height="match_parent"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:textSize="@dimen/x32"
	        android:textColor="#333333"
	        android:background="@drawable/dialog_tv_selector"
	        />
	    <View 
	        android:layout_width="@dimen/x1"
	        android:layout_height="match_parent"
	        android:background="@color/common_line"
	        />
	    <TextView 
	        android:id="@+id/alert_rbtn"
	        android:layout_height="match_parent"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:textSize="@dimen/x32"
	        android:textColor="#007AFF"
	        android:background="@drawable/dialog_tv_selector"
	        />
	</LinearLayout>
	
</LinearLayout>