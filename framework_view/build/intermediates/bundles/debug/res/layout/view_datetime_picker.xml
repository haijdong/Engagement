<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:picker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_default_w"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x88"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:text="@string/select_data"
        android:gravity="center_vertical"
        android:textSize="@dimen/x32"
        android:textColor="#333333"
        />

    <View style="@style/num_picker_horizontal_l" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        >
        <TextView 
            android:id="@+id/yearTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:textSize="@dimen/x32"
            android:textColor="#666666"
            android:gravity="center"
            android:text="年"
            />
        <TextView 
            android:id="@+id/monthTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:textSize="@dimen/x32"
            android:textColor="#666666"
            android:gravity="center"
            android:text="月"
            />
        <TextView 
            android:id="@+id/dayTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:textSize="@dimen/x32"
            android:textColor="#666666"
            android:gravity="center"
            android:text="日"
            />
        <TextView 
            android:id="@+id/hourTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:textSize="@dimen/x32"
            android:textColor="#666666"
            android:gravity="center"
            android:text="时"
            />
        <TextView 
            android:id="@+id/minuteTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:textSize="@dimen/x32"
            android:textColor="#666666"
            android:gravity="center"
            android:text="分"
            />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20" 
        >
    </LinearLayout>

    <View style="@style/num_picker_horizontal_l" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/x88"
            android:layout_weight="1.0"
            android:text="@string/cancel"
            android:textSize="@dimen/x32"
            android:textColor="#666666"
            android:gravity="center"
            />

        <View style="@style/num_picker_vertical_l" >
        </View>

        <TextView
            android:id="@+id/ok_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/x88"
            android:layout_weight="1.0"
            android:text="@string/ok"
            android:textSize="@dimen/x32"
            android:textColor="#666666"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>