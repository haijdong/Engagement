<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    >
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView 
        	android:id="@+id/def_img"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:scaleType="centerCrop"
        	/>
	    <android.support.v4.view.ViewPager
	        android:id="@+id/pager"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="0dip"
	        android:padding="0dip"
	        />
		<com.segi.view.indicator.CirclePageIndicator
	        android:id="@+id/indicator"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="bottom|right"
	        android:paddingBottom="@dimen/x6"
	        android:paddingRight="@dimen/x6"
	        app:centered="true"
            app:fillColor="@android:color/white"
            app:pageColor="@android:color/white"
            app:strokeColor="@android:color/transparent"
            app:radius="@dimen/x6"
            app:snap="true"
            app:strokeWidth="@dimen/x2" 
            app:alpha="64"
	        />
		
		<TextView 
		    android:id="@+id/advertTitle"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="bottom|left"
		    android:gravity="left"
		    android:textColor="#FFFFFF"
		    android:background="#12000000"
		    android:paddingLeft="@dimen/x10"
		    android:visibility="gone"
		    />
    </FrameLayout>
</LinearLayout>