<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.segi.view.zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@color/theme"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x36"
            android:text="二维码"
            android:id="@+id/scan_title"/>
          
        <TextView
            android:id="@+id/cancel_scan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x100"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/btn_back_selector"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x36"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x30"
            android:layout_alignParentLeft="true"
            />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/x150"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x32"
            android:gravity="center_horizontal"
            android:text="将二维码放入框内，即可扫描得到结果"
            />
        
    </RelativeLayout>

</FrameLayout>